                <VerticalStackLayout Padding="10">
                    <Label TextColor="Black" Style="{StaticResource LargeLabel}" Text="Set Tempreture in °C:" />
                    <!--<Label TextColor="Black" Style="{StaticResource LargeLabel}" Text="{Binding Temp}" />-->
                    <!--<Button Text="Set Airquality" 
                        Command="{Binding GetMonkeysCommand}"
