                <VerticalStackLayout Padding="10">
                    <Label TextColor="Black" Style="{StaticResource LargeLabel}" Text="Tempreture in °C:" />
                    <!--<Label TextColor="Black" Style="{StaticResource LargeLabel}" Text="{Binding Temp}" />-->
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="5">
            <Frame Grid.Column="0" Padding="10" Style="{StaticResource CardView}">
                <VerticalStackLayout Padding="10">
                    <Label TextColor="Black" Style="{StaticResource LargeLabel}" Text=" Set Humidity in %:" />
                    <!--<Label TextColor="Black" Style="{StaticResource LargeLabel}" Text="{Binding Humid}" />-->
                    <!--<Button Text="Set Airquality" 
                        Command="{Binding GetMonkeysCommand}"
